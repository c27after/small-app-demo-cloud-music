.videoBox {
  background-color: #fff;
  border-radius: 18rpx;
  height: 500rpx;
  margin-bottom: 10rpx;
}

.videoTitle {
  font-weight: bold;
  font-size: 35rpx;
}

.videoTop {
  position: relative;
}

.time {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  color: #fff;
  font-size: 25rpx;
}



.videoBox image {
  width: 100%;
  height: 350rpx;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
}

.videoBottom {
  padding: 15rpx;
  display: flex;
  height: 110rpx;
  flex-direction: column;
  justify-content: space-between;
}

.creatorBox {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

.creator,
.moreAction {
  color: #a4a4a4;
  font-size: 28rpx;
}

.videoName text {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.mvSwiper{
  display: flex;
}
.playcount{
  position: absolute;
  left: 8rpx;
  bottom: 8rpx;
  color: #fff;
  font-size: 25rpx;
}