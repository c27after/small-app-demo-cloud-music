.bgImageBox {
  overflow: hidden;
  border-radius: 100% 100% 100% 100% / 0% 0% 4% 4%;
  height: 400rpx;
  left: 0;
  top: 0;
  z-index: -2;
}

.songMenuContainer {
  margin-top: 60rpx;
  padding: 15rpx;
  background-color: #fff;
  border-radius: 18rpx;
}

.showComment {
  background-color: #fff;
  width: 85%;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  position: absolute;
  top: 358rpx;
  left: 50%;
  transform: translateX(-50%);
  justify-content: space-between;
  color: #eee;
}
.swIcon{
  font-size: 30rpx;
  margin:15rpx 40rpx;
  color:rgb(43, 40, 40);
  padding: 5rpx;
}

.bgSMD {
  width: 100%;
  height: 400rpx;
  filter: blur(36rpx);
  transform: scale(1.2);

}

.songMenuDetail {
  height: 400rpx;
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.songMenuDetailImg {
  width: 250rpx;
  height: 250rpx;
  border-radius: 18rpx;
  margin-right: 40rpx;
}

.creatorAvatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.menuName,
.favo,
.introInfo {
  font-size: 30rpx;
  color: #fff;
}

.menuInfo {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 250rpx;
}

.menuMain {
  display: flex;
  align-items: center;
}

.favo {
  background-color: rgba(0, 0, 0, 0.2);
  padding: 8rpx 10rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.menuName {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 35rpx;
}

.creatorName {
  color: #eee;
  margin-right: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  width: 200rpx;
}

.introInfo {
  color: #eee;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 30;
}