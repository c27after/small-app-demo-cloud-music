<!-- 轮播图区域 -->
<view class="swiperContainer">
  <swiper autoplay indicator-dots indicator-color="ivory" indicator-active-color="#d43c33"
  class="bannerSwiper"
  >
    <swiper-item wx:for="{{bannerList}}" wx:key="bannerId" class="swiperContainerItem">
      <image class="swiperContainerImage" src="{{item.pic}}"></image>
    </swiper-item>
  </swiper>
</view>
<!-- 图标导航区 -->
<view class="iconBox">
  <view class="iconItem">
    <text class="iconfont icon-tuijiange"></text>
    <text>推荐</text>
  </view>
  <view class="iconItem">
    <text class="iconfont icon-paixingbang"></text>
    <text>排行榜</text>
  </view>
  <view class="iconItem">
    <text class="iconfont icon-bofanggedan"></text>
    <text>歌单</text>
  </view>
</view>
<!-- 推荐歌单区域 -->
<view class="recommendContainer">
  <!-- 头部 -->
  <Nav title="推荐歌单"></Nav>
  <view class="recommendMain">
    <!-- 滑块区域 -->
    <scroll-view class="scrollView" enable-flex scroll-x>
      <view class="scrollViewItem" wx:for="{{recommendList}}" wx:key="id">
        <image src="{{item.picUrl}}"></image>
        <text>{{item.name}}</text>
      </view>

    </scroll-view>


  </view>
</view>
