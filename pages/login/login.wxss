/* #d43c33 */
.loginbg{
  width: 100%;
  height: 470rpx;
  border-radius: 100% 100% 100% 100% / 0% 0% 20% 20%;
}
.loginBox{
  position: relative;
}
.loginBtn{
  background-color: #d43c33;
  color: #fff;
  margin-top: 15rpx;
}
.inputBox{
  background-color: #fff;
  margin: 16rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  position: absolute;
  width: 680rpx;
  top: -90rpx
}
.inputItem{
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
}
.text{
  position: absolute;
  bottom: 20rpx;
  font-size: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #A4A4A4;
}

.btnAct{
  color:palevioletred
}