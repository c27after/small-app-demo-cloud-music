.searchContainer {
  padding: 15rpx;

}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom-left-radius: 18rpx;
  border-top-left-radius: 18rpx;
}

.searchArea {
  display: flex;
  align-items: center;
  border-radius: 18rpx;
  background-color: #fff;
  flex: 1;
}

.searchIcon {
  font-size: 50rpx;
  color: #a4a4a4;
}

.cancel {
  padding: 8rpx 20rpx;
  border-radius: 18rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.hotSearch {
  background-color: #fff;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  border-radius: 18rpx;
  padding-top: 10rpx;
}

.hotItem {
  width: 50%;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
}

.hotItem image {
  width: 40rpx;
  height: 40rpx;
}

.hotName {
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.hotHot {
  margin: 15rpx 0;
  display: block;
  font-size: 36rpx;
  font-weight: bold;
}

.hotIndex {
  width: 37rpx;
  text-align: center;
}

.chacha {
  font-size: 33rpx;
  color: #000;
}

.fullText {
  flex: 1;
}

.sousuoContent {
  display: block;
  width: 95%;
  margin: 0 auto;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #f0f;
  color: #f0f;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.showContent {
  background-color: #fff;
  border-radius: 18rpx;
  padding-right: 16rpx;
  padding-bottom: 20rpx;
  padding-top: 5rpx;
}

.showItem {
  display: flex;
  margin: 15rpx 0;
}

.diffSousuo {
  font-size: 50rpx;
  color: #a4a4a4;
}

.dimContent {
  border-bottom: 1px solid #a4a4a4;
  flex: 1;
  padding-bottom: 20rpx;
  color: #000;
  font-size: 32rpx;
  margin-left: 15rpx;
}

.resultList {
  background-color: #fff;
}

.resultContent {
  display: block;
  margin: 15rpx 0;
}

.scrollResList {
  height: calc(100vh - 155rpx);
}

.historyArea {
  background-color: #fff;
  margin-top: 10rpx;
  padding: 10rpx 0;
  border-radius: 18rpx;
}

.historyAreaTop {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.lajiIcon {
  font-size: 35rpx;
  color: #000;
  font-weight: bold;
}

.hisItemBox {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.hisItem {
  font-size: 28rpx;
  display: -webkit-box;
  width: 20%;
  height: 42rpx;
  line-height: 42rpx;
  background-color: #d43c33;
  color: #FFF;
  margin: 10rpx;
  text-align: center;
  border-radius: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  padding: 6rpx;
}
.hisName{
  font-weight: bold;
  font-size: 34rpx;
}